<apex:page standardController="Account" recordSetVar="acc">
<apex:form >
    <apex:panelGrid >
    <apex:pageBlock >
        <apex:outputText >View:</apex:outputText>
        <apex:selectList value="{!filterid}" size="1">
            <apex:selectOptions value="{!ListViewOptions}"/>
            <apex:actionSupport event="onchange" reRender="thelist"/>
        </apex:selectList>       
          <apex:commandButton value="Go" action="{!list}"/>       
    </apex:pageBlock>
    </apex:panelGrid>
    <apex:pageBlock >
        <apex:pageBlockTable value="{!acc}" var="a" id="thelist">           
            <apex:column headerValue="Name">            
            <apex:inputField value="{!a.name}"/>
            </apex:column>
             <apex:column headerValue="Rating">            
            <apex:inputField value="{!a.Rating}"/>
            </apex:column>
        </apex:pageBlockTable>
    </apex:pageBlock>
</apex:form>
</apex:page>