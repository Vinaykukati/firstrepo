<apex:page standardController="Account" recordSetVar="acc">
    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockTable value="{!acc}" var="a">
                <apex:column value="{!a.name}"/>
                <apex:column >
                <apex:inputField value="{!a.Phone}"/>
                </apex:column>
            </apex:pageBlockTable>
        </apex:pageBlock>
    </apex:form>
</apex:page>