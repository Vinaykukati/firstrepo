<apex:page controller="SOQLQUERIESCONTROLLER">
    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockButtons >
                <apex:commandButton value="limitRecords" action="{!Records}"/>
                <apex:commandButton value="offsetRecords" action="{!offsetrecord}"/>
                <apex:commandButton value="getRecords" action="{!getRecords}"/>
                <apex:commandButton value="Related" action="{!relatedRecords}"/>
            </apex:pageBlockButtons>
            <apex:pageBlockTable value="{!acc}" var="a">
            <apex:column value="{!a.name}"/>
            </apex:pageBlockTable>
        </apex:pageBlock>
    </apex:form>
</apex:page>