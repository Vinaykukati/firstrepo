<apex:page controller="Page1">
    <apex:form >
        <apex:pageBlock >
        <apex:pageBlockSection title="Account info">
            <apex:outputField value="{!acc.name}"/>
            <apex:outputField value="{!acc.Rating}"/>
            <apex:outputField value="{!acc.AnnualRevenue}"/>
            <apex:outputField value="{!acc.Phone}"/>
            </apex:pageBlockSection>
            <apex:pageBlockSection title="Opportunity info">
                <apex:outputField value="{!opp.name}"/>
                <apex:outputField value="{!opp.Type}"/>
                <apex:outputField value="{!opp.CloseDate}"/>
              
            </apex:pageBlockSection>
            <apex:pageBlockSection title="Contact info">
                <apex:outputField value="{!con.FirstName}"/>
                <apex:outputField value="{!con.phone}"/>
                <apex:outputField value="{!con.LastName}"/>
                
            </apex:pageBlockSection>
            
               <apex:pageBlockButtons > 
                <apex:commandButton value="Previous" action="{Step2}"/>
                <apex:commandButton value="Cancel"/>
                <apex:commandButton value="Save" action="{!Save}"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>