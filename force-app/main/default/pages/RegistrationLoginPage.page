<apex:page controller="RegistrationLoginPage1controller">
<apex:pagemessages ></apex:pagemessages>
    <apex:form >
        <center>
        <apex:panelGrid >
        <apex:pageBlock >
            <apex:pageBlockSection columns="1">
            <apex:pageblocksectionItem >
                <apex:outputText >UserName:</apex:outputText>
                <apex:inputText value="{!UserName}"/>
                </apex:pageblocksectionItem>
                <apex:pageblocksectionItem >
                 <apex:outputText >Password:</apex:outputText>
                <apex:inputText value="{!Password}"/>
                </apex:pageblocksectionItem>
            </apex:pageBlockSection>
            <apex:pageBlockButtons >
                <apex:commandButton value="Login" action="{!login}"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
      </apex:panelGrid>
      </center>
    </apex:form>
</apex:page>